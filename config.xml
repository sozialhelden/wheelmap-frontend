<?xml version='1.0' encoding='utf-8'?>
<widget id="org.wheelmap.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Wheelmap</name>
    <description>
        Find wheelchair-accessible places.
    </description>
    <author email="bugs@wheelmap.org" href="https://wheelmap.org">
        Sozialhelden e.V.
    </author>
    <content src="index.html" />
    <access origin="https://wheelmap.org" />
    <access origin="https://staging.wheelmap.org" />
    <access origin="https://accessibility-cloud.freetls.fastly.net" />
    <access origin="https://api.mapbox.com" />
    <access origin="https://www.accessibility.cloud" />
    <access origin="https://photon.komoot.de" />
    <access origin="http://localhost:3000" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-advanced-http" spec="^1.11.1" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.4.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
    <plugin name="cordova-plugin-statusbar" spec="~2.3.0" />
    <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
    <plugin name="cordova-plugin-browsersync" spec="~0.1.7" />
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
